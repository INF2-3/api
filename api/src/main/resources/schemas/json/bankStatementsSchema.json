{
  "$schema":"https://json-schema.org/draft-07/schema",
  "$id":"http://main.com/schema.json",
  "title":"Bank statements",
  "type":"object",
  "required":[
    "bankStatements"
  ],
  "properties":{
    "bankStatements":{
      "title":"Bankstatements",
      "type":"array",
      "default":[

      ],
      "items":{
        "title":"Items",
        "type":"object",
        "required":[
          "id",
          "accountNumber",
          "uploadDate",
          "closingBalance",
          "uploader"
        ],
        "properties":{
          "id":{
            "title":"Id",
            "type":"integer",
            "examples":[
              1
            ],
            "default":0
          },
          "accountNumber":{
            "title":"Accountnumber",
            "type":"string",
            "default":"",
            "examples":[
              "NL69INGB0123456789EUR"
            ],
            "pattern":"^.*$"
          },
          "uploadDate":{
            "title":"Uploaddate",
            "type":"string",
            "default":"",
            "examples":[
              "140220"
            ],
            "maxLength": 6,
            "minLength": 6
          },
          "closingBalance":{
            "title":"Closingbalance",
            "type":"string",
            "default":0.0,
            "pattern": "^-?\\d+(\\.\\d{1,2})?$"
          },
          "uploader":{
            "title":"Uploader",
            "type":"string",
            "default":"",
            "examples":[
              "john"
            ],
            "pattern":"^[a-zA-Z ]+$"
          }
        }
      }
    }
  }
}