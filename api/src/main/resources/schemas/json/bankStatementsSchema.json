{
  "$schema":"https://json-schema.org/draft-07/schema",
  "$id":"http://quintor.com/bankStatementsSchema.json",
  "title":"Schema for multiple bank statements",
  "type":"object",
  "required":[
    "bankStatements"
  ],
  "properties":{
    "bankStatements":{
      "title":"Bankstatements",
      "type":"array",
      "default":[

      ],
      "items":{
        "title":"Items",
        "type":"object",
        "required":[
          "id",
          "accountNumber",
          "uploadDate",
          "closingBalance",
          "uploader"
        ],
        "properties":{
          "id":{
            "type":"integer"
          },
          "accountNumber":{
            "type":"string",
            "pattern":"NL[0-9]{2}[A-z0-9]{4}[0-9]{10}[A-Z]{3}"
          },
          "uploadDate":{
            "type":"string",
            "pattern": "^\\d{4}\\-(0[1-9]|1[012])\\-(0[1-9]|[12][0-9]|3[01])$"
          },
          "closingBalance":{
            "type": "number"
          },
          "uploader":{
            "type":"string"
          }
        }
      }
    }
  }
}