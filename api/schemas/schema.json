{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://main.com/schema.json",
  "title": "Main schema",
  "type": "object",
  "description": "This schema validates the custom json file that gets parsed by the JSONParser",
  "required": [
    "header",
    "tags"
  ],
  "properties": {
    "header": {
      "title": "Schema for header",
      "type": "object",
      "required": [
        "logicalTerminal",
        "receiverAddress",
        "sequenceNumber",
        "mtId",
        "sessionNumber",
        "messageType",
        "type",
        "applicationId",
        "serviceId"
      ],
      "properties": {
        "logicalTerminal": {
          "description": "Schema for logical terminal",
          "type": "string",
          "default": ""
        },
        "receiverAddress": {
          "description": "Schema for receiver address",
          "type": "string",
          "default": ""
        },
        "sequenceNumber": {
          "description": "Schema for sequence number",
          "type": "string",
          "default": ""
        },
        "mtId": {
          "description": "Schema for mt id",
          "type": "string",
          "default": ""
        },
        "sessionNumber": {
          "description": "Schema for session number",
          "type": "string",
          "default": ""
        },
        "messageType": {
          "description": "Schema for message type",
          "type": "string",
          "default": ""
        },
        "applicationId": {
          "description": "Schema for application id",
          "type": "string",
          "default": ""
        },
        "serviceId": {
          "description": "Schema for service id",
          "type": "string",
          "default": ""
        }
      }
    },
    "tags": {
      "title": "Schema for tags",
      "type": "object",
      "required": [
        "accountIdentification",
        "transactionReferenceNumber",
        "closingBalance",
        "statementNumber",
        "openingBalance"
      ],
      "properties": {
        "forwardAvailableBalance": {
          "description": "Schema for optional tag 65",
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "required": [
              "date",
              "currency",
              "amount",
              "dCMark"
            ],
            "properties": {
              "date": {
                "type": "string"
              },
              "currency": {
                "type": "string"
              },
              "amount": {
                "type": "string"
              },
              "dCMark": {
                "type": "string"
              }
            }
          }
        },
        "closingAvailableBalance": {
          "description": "Schema for optional tag 64",
          "type": "object",
          "required": [
            "name",
            "date",
            "description",
            "currency",
            "amount",
            "dCMark"
          ],
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "date": {
              "type": "string",
              "default": ""
            },
            "description": {
              "type": "string",
              "default": ""
            },
            "currency": {
              "type": "string",
              "default": ""
            },
            "amount": {
              "type": "string",
              "default": ""
            },
            "dCMark": {
              "type": "string",
              "default": ""
            }
          }
        },
        "accountIdentification": {
          "description": "Schema for mandatory tag 25",
          "type": "object",
          "required": [
            "name",
            "accountNumber",
            "description"
          ],
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "accountNumber": {
              "type": "string",
              "default": ""
            },
            "description": {
              "type": "string",
              "default": ""
            }
          }
        },
        "transactionReferenceNumber": {
          "description": "Schema for mandatory tag 20",
          "type": "object",
          "required": [
            "name",
            "referenceNumber",
            "description"
          ],
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "referenceNumber": {
              "type": "string",
              "default": ""
            },
            "description": {
              "type": "string",
              "default": ""
            }
          }
        },
        "closingBalance": {
          "description": "Schema for mandatory tag 62F",
          "type": "object",
          "required": [
            "name",
            "date",
            "description",
            "currency",
            "amount",
            "dCMark"
          ],
          "properties": {
            "name": {
              "type": "string",
              "default": ""
            },
            "date": {
              "type": "string",
              "default": ""
            },
            "description": {
              "type": "string",
              "default": ""
            },
            "currency": {
              "type": "string",
              "default": ""
            },
            "amount": {
              "type": "string",
              "default": ""
            },
            "dCMark": {
              "type": "string",
              "default": ""
            }
          }
        },
        "transactions": {
          "description": "Schema for optional 61 tags",
          "type": "array",
          "required": [
            "transactionType",
            "identificationCode",
            "amount",
            "entryDate",
            "supplementaryDetails",
            "name",
            "debitCreditMark",
            "valueDate",
            "referenceForTheAccountOwner",
            "referenceOfTheAccountServicingInstitution"
          ],
          "properties": {
            "transactionType": {
              "type": "string"
            },
            "identificationCode": {
              "type": "string"
            },
            "amount": {
              "type": "string"
            },
            "entryDate": {
              "type": "string"
            },
            "informationToAccountOwner": {
              "title": "Schema for the optional 86 tag inside a transaction (61 tag)",
              "type": "object",
              "required": [
                "paymentInformationId",
                "ultimateCreditor",
                "endToEndReference",
                "ultimateDebitor",
                "counterPartyId",
                "mandateReference",
                "charges",
                "accountOwnerInformationInOneLine",
                "remittanceInformation",
                "exchangeRate",
                "returnReason",
                "purposeCode",
                "clientReference",
                "instructionId",
                "creditorId"
              ],
              "properties": {
                "paymentInformationId": {
                  "type": "string"
                },
                "ultimateCreditor": {
                  "type": "string"
                },
                "endToEndReference": {
                  "type": "string"
                },
                "ultimateDebitor": {
                  "type": "string"
                },
                "counterPartyId": {
                  "type": "string"
                },
                "mandateReference": {
                  "type": "string"
                },
                "charges": {
                  "type": "string"
                },
                "accountOwnerInformationInOneLine": {
                  "type": "string"
                },
                "remittanceInformation": {
                  "type": "string"
                },
                "exchangeRate": {
                  "type": "string"
                },
                "returnReason": {
                  "type": "string"
                },
                "purposeCode": {
                  "type": "string"
                },
                "clientReference": {
                  "type": "string"
                },
                "instructionId": {
                  "type": "string"
                },
                "creditorId": {
                  "type": "string"
                }
              }
            },
            "supplementaryDetails": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "debitCreditMark": {
              "type": "string"
            },
            "valueDate": {
              "type": "string"
            },
            "referenceForTheAccountOwner": {
              "type": "string"
            },
            "referenceOfTheAccountServicingInstitution": {
              "type": "string"
            }
          }
        },
        "statementNumber": {
          "description": "Schema for mandatory 28C tag",
          "type": "object",
          "required": [
            "name",
            "statementNumber",
            "description"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "statementNumber": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          }
        },
        "openingBalance": {
          "description": "Schema for mandatory 60F tag",
          "type": "object",
          "required": [
            "date",
            "description",
            "currency",
            "amount",
            "tag",
            "dCMark"
          ],
          "properties": {
            "date": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "currency": {
              "type": "string"
            },
            "amount": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            },
            "dCMark": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}